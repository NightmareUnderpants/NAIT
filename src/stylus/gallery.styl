.gallery
  max-width 1100px
  margin 30px auto

  &__tile
    card(0)
    overflow hidden

  &__img
    width 100%
    height 100%
    object-fit cover
    object-position center


/* Карусель: фиксируем высоту */
#mainCarousel .carousel-item img
  height 320px
  object-fit cover
  object-position center

@media (min-width: 992px)
  #mainCarousel .carousel-item img
    height 380px
